<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Posts</title>
    <link rel="stylesheet" href="/Style/posts.css">
</head>
<body>
    <%- include('../../../Partials/header.ejs') %>

    <div class="post-container">
        <h1>All Posts</h1>
        <div class="post-grid">
            <% if (posts && posts.length > 0) { %>
                <% posts.forEach(post => { %>
                    <div class="post-card">
                        <img src="/Public/<%= post.thumbnail || 'Public/Uploads/default-image.png' %>" alt="Post Thumbnail">
                        <div class="post-content">
                            <h2><%= post.title %></h2>
                            <p><%= post.body.substring(0, 100) %>...</p>
                            <div class="post-tags">
                                <% if (post.tags && post.tags.length > 0) { %>
                                    <% post.tags.forEach(tag => { %>
                                        <span class="post-tag"><%= tag %></span>
                                    <% }) %>
                                <% } %>
                            </div>
                            <a href="/post/edit/<%= post._id %>" class="post-btn post-edit-btn">Edit</a>
                            <a href="/post/delete/<%= post._id %>" class="post-btn post-delete-btn">Delete</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No posts available.</p>
            <% } %>
        </div>
    </div>

</body>
</html>